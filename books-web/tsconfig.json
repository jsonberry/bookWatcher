{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@books-web/grey-worm/book": [
        "libs/grey-worm/book/src/index.ts"
      ],
      "@books-web/grey-worm/books": [
        "libs/grey-worm/books/src/index.ts"
      ],
      "@books-web/grey-worm/collection": [
        "libs/grey-worm/collection/src/index.ts"
      ],
      "@books-web/grey-worm/book-service": [
        "libs/grey-worm/book-service/src/index.ts"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
